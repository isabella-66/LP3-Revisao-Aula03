@model List<EstudoASPNETRazor.ViewModels.EstudanteViewModel>

@{
    ViewData["Title"] = "Estudantes";
}

<h1>Estudantes</h1>

@if(Model.Count == 0) 
{
    <p>Nenhum(a) estudante cadastrado(a)</p>
    <a href="#">Cadastre agora um estudante</a>
}
else
{
    <p>@Model.Count estudantes cadastrados(as)</p>
    @foreach (var estudante in Model)
    {
        <h4>
            @estudante.Id
            <a href="Estudante/Show/@estudante.Id"> Nome: @estudante.Nome</a>
        </h4>
        <p><strong>EndereÃ§o:</strong> @estudante.Endereco</p>

        if(estudante.Ativo)
        {
            <button>Iniciar conversa</button>
        }
        <hr>
    }
}